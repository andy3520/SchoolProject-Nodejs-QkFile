section#signup.aboutus.signup-section
  .container-fluid
    .row
      .col-md-12
        .section-title
          h2.font-weight.color-y Sign Up
        .section.contact-us.container-fluid
          .row
            .col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
              .outer-box.text-center
                // Contact Form Start
                .form-box.clearfix
                  form#signupform.shake.scroll-reveal(data-toggle='validator' action='/signup' method='post')
                    .form-group.col-xs-12
                      label(id="email-signup-error" class="error" for="email-signup")
                      input#email-signup.border-color-y.form-control.input-code(type='email' placeholder='Email' name='email')
                    .form-group.col-xs-12.col-sm-6
                      label(id="username-signup-error" class="error" for="username-signup")
                      input#username-signup.border-color-y.form-control.input-code(type='text' placeholder='Username' name='username')
                    .form-group.col-xs-12.col-sm-6
                      label(id="phone-signup-error" class="error" for="phone-signup")
                      input#phone-signup.border-color-y.form-control.input-code(type='text' placeholder='Phone number' name='phone')
                    .form-group.col-xs-12.col-sm-6
                      label(id="name-signup-error" class="error" for="name-signup")
                      input#name-signup.border-color-y.form-control.input-code(type='text' placeholder='Name' name='name')
                    .form-group.col-xs-12.col-sm-6
                      label(id="gender-signup-error" class="error" for="gender-signup")
                      select#gender-signup.border-color-y.form-control.input-code(name="gender")
                        option(selected="true" disabled="true") Gender
                        option Male
                        option Female
                    .clearfix
                    .form-group.col-xs-12.col-sm-6
                      label(id="address-signup-error" class="error" for="address-signup")
                      input#address-signup.border-color-y.form-control.input-code(type='text' placeholder='Address' name='address')
                    .form-group.col-xs-12.col-sm-6
                      label(id="birthday-signup" class="error" for="birthday-signup")
                      input#birthday-signup.border-color-y.form-control.input-code(type='date' placeholder='Date of birth' name='birthday')
                    .form-group.col-xs-12.col-sm-6
                      label(id="loginpass-signup" class="error" for="loginpass-signup")
                      input#loginpass-signup.border-color-y.form-control.input-code(type='password' placeholder='Password' name="password")
                    .form-group.col-xs-12.col-sm-6
                      label(id="retypepass-signup" class="error" for="retypepass-signup")
                      input#retypepass-signup.border-color-y.form-control.input-code(type='password' placeholder='Password' name="confirmpass")
                    .col-xs-3.col-sm-2
                      img.icon-auth.pull-left(src="images/fb-icon.png" width="50px")
                    .col-xs-3.col-sm-2
                      img.icon-auth.pull-left(src="images/gg-icon.png" width="50px")
                    .col-xs-12.col-sm-8
                      input(type="submit" value="Signup").btn.upload-btn.pull-right
                      //a.btn.upload-btn.pull-right(href='#') Sign Up
                      #msgSubmit
.clearfix