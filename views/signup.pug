section#signup.aboutus.signup-section
  .container
    .row
      .col-md-12
        .section-title
          h2.font-weight.color-y Sign Up
        .section.contact-us
          .container-fluid
            .row
              .col-xs-10.col-xs-offset-1.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
                .outer-box.text-center
                  // Contact Form Start
                  .form-box.clearfix
                    form#signupform.shake.scroll-reveal(data-toggle='validator' )
                      .form-group.col-xs-12
                        input#username-signup.border-color-y.form-control.input-code(type='text', placeholder='Full Name')
                      .form-group.col-xs-12
                        input#email-signup.border-color-y.form-control.input-code(type='email', placeholder='Email')
                      .form-group.col-xs-12
                        input#loginpass-signup.border-color-y.form-control.input-code(type='password', placeholder='Password')
                      .col-xs-3.col-sm-2
                        img.icon-auth.pull-left(src="images/fb-icon.png" width="50px")
                      .col-xs-3.col-sm-2
                        img.icon-auth.pull-left(src="images/gg-icon.png" width="50px")
                      .col-xs-12.col-sm-8
                        a.btn.upload-btn.pull-right(href='#') Sign Up
                        #msgSubmit
.clearfix